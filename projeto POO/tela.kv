<Gerenciador>:
    Menu:
        name: 'menu'
    Cotacoes:
        name: 'cotacoes'
    Leilao:
        name: 'leilao'

<menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(100)
        spacing: dp(30)
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'imgs/nature.jpg'
        Image:
            source: 'imgs/lance.png'
            size_hint_y: None
            height: dp(200)
            allow_stretch:True
        Botao:
            text: 'cotações'
            on_press: app.root.current = 'cotacoes'
        Botao:
            text: 'Leilão'
            on_press: app.root.current = 'leilao'
        Botao:
            text: 'sair'
            on_press: root.confirmacao()

<Cotacoes>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'cotações'
                    on_press: app.root.current = 'menu'
                ActionButton:
                    text: 'sair'
                    on_press: app.stop()
        BoxLayout:
            size_hint_y: None
            height: dp(40)
            TextInput:
                id: texto
                text: 'buscar'
                bold: True
            Button:
                text: '>'
                on_press: root.buscar()

        ScrollView:
            BoxLayout:
                id: box
                orientation: 'vertical'
                size_hint_y: None
                height: 667
                spacing: 10

<Leilao>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'tarefas'
                    on_press: app.root.current = 'menu'
                ActionButton:
                    text: 'sair'
                    on_press: app.stop()
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                id: box
                Label:
                    font_size: 30
                    text: 'Leilão'
        BoxLayout:
            size_hint_y: None
            height: dp(60)
            TextInput:
                id: texto
            Button:
                text: 'fazer lance'



